{% include 'header.twig' %}

{% include 'sidebar.twig' %}

{% include 'breadcrumb.twig' %}

<div class="container-fluid">

    <div class="animated fadeIn">

        <div class="row">
            <div class="col-lg-12">
                <div class="card text-white bg-warning">
                    <div class="card-header">
                        Warning
                    </div>
                    <div class="card-body">
                        There is currently no data validation.
                    </div>
                </div>
            </div></div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <form action="/rules/senders/add" method="POST">
                        <div class="card-body">
                            <div class="row full-width">

                                <div class="col-lg-4">
                                    <div class="pull-left full-width text-center">
                                        <input type="text" class="form-control" name="foundWordsInput" id="foundWordsInput">
                                        <label for="foundWordsInput"><strong>Needles</strong></label>
                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <div class="pull-left full-width text-center">
                                        <input type="text" class="form-control" name="fileCompanyInput" id="fileCompanyInput">
                                        <label for="fileCompanyInput"><strong>Company</strong></label>
                                    </div>
                                </div>
                                <div class="col-lg-1">
                                    <div class="pull-left full-width text-center">
                                        <input type="text" class="form-control" name="scoreInput" id="scoreInput">
                                        <label for="scoreInput"><strong>Score</strong></label>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="pull-left full-width text-center">
                                        <input type="text" class="form-control" name="tagsInput" id="tagsInput">
                                        <label for="tagsInput"><strong>Tags</strong></label>
                                    </div>
                                </div>
                                <div class="col-lg-1 text-center">
                                    <label class="switch switch-default switch-info">
                                        <input type="checkbox" class="switch-input" name="activeInput" id="activeInput" checked="">
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                    <br>
                                    <strong>Active</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped table-hover table-bordered">
                            <thead class="thead-default">
                            <tr>
                                <th>Needles</th>
                                <th>Company</th>
                                <th>Score</th>
                                <th>Tags</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for sender in senders %}
                                <tr>
                                    <td>{{ sender.foundWords }}</td>
                                    <td>{{ sender.fileCompany }}</td>
                                    <td>{{ sender.companyScore }}</td>
                                    <td>{{ sender.tags }}</td>
                                    <td>
                                        <label class="switch switch-default switch-info-outline">
                                            <input type="checkbox" class="switch-input" name="activeInput" id="activeInput" checked="{{ sender.isActive }}" disabled>
                                            <span class="switch-label"></span>
                                            <span class="switch-handle"></span>
                                        </label>
                                    </td>
                                </tr>{% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div><!-- /.row -->
    </div>

</div>

{% include 'fooder.twig' %}