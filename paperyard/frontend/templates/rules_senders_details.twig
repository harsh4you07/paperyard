{% extends 'layout.twig' %}

{% block content %}

<div class="container-fluid">

    <div class="animated fadeIn">

        <div class="row">

            <div class="col-lg-12">

                <div class="card">
                    <form action="/rules/senders/{{ rule.id }}/save" method="post">
                        <div class="card-header">
                            {% trans "Rule Details" %}
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="foundWordsInput"><strong>{% trans "Needles" %}</strong></label>
                                <input type="text" class="form-control" name="foundWordsInput" id="foundWordsInput" value="{{ rule.foundWords }}">
                            </div>
                            <div class="form-group">
                                <label for="fileCompanyInput"><strong>{% trans "Company" %}</strong></label>
                                <input type="text" class="form-control" name="fileCompanyInput" id="fileCompanyInput" value="{{ rule.fileCompany }}">
                            </div>
                            <div class="form-group">
                                <label for="tagsInput"><strong>{% trans "Tags" %}</strong></label>
                                <input type="text" class="form-control" name="tagsInput" id="tagsInput" value="{{ rule.tags }}">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="companyScoreInput"><strong>{% trans "Score" %}</strong></label>
                                        <input type="number" class="form-control" name="companyScoreInput" id="companyScoreInput" value="{{ rule.companyScore }}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label for="activeInput"><strong>{% trans "Status" %}</strong></label><br>
                                    <label class="switch switch-xl switch-default switch-info">
                                        <input type="checkbox" class="switch-input" name="activeInput" id="activeInput"{% if rule.isActive == 1 %} checked{% endif %}>
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-md btn-success">{% trans "save" %}</button>
                            <div class="pull-right">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                                    {% trans "delete" %}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

        </div><!-- /.row -->
    </div>

</div>

{% include 'rule_delete_modal.twig' %}

{% endblock %}