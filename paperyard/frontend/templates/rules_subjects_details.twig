{% include 'header.twig' %}

{% include 'sidebar.twig' %}

{% include 'breadcrumb.twig' %}

<div class="container-fluid">

    <div class="animated fadeIn">

        <div class="row">

            <div class="col-lg-12">

                <div class="card">
                    <form action="/rules/subjects/{{ subject.id }}/save" method="post">
                        <div class="card-header">
                            Rule Details
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="foundWordsInput"><strong>Needles</strong></label>
                                <input type="text" class="form-control" name="foundWordsInput" id="shortNameForFileInput" value="{{ subject.foundWords }}">
                            </div>
                            <div class="form-group">
                                <label for="foundCompanyInput"><strong>Company</strong></label>
                                <input type="text" class="form-control" name="foundCompanyInput" id="foundCompanyInput" value="{{ subject.foundCompany }}">
                            </div>
                            <div class="form-group">
                                <label for="fileSubjectInput"><strong>Subject</strong></label>
                                <input type="text" class="form-control" name="fileSubjectInput" id="fileSubjectInput" value="{{ subject.fileSubject }}">
                            </div>
                            <div class="form-group">
                                <label for="tagsInput"><strong>Tags</strong></label>
                                <input type="text" class="form-control" name="tagsInput" id="tagsInput" value="{{ subject.tags }}">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="subjectScoreInput"><strong>Score</strong></label>
                                        <input type="number" class="form-control" name="subjectScoreInput" id="subjectScoreInput" value="{{ subject.subjectScore }}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label for="activeInput"><strong>Score</strong></label><br>
                                    <label class="switch switch-xl switch-default switch-info">
                                        <input type="checkbox" class="switch-input" name="activeInput" id="activeInput"{% if subject.isActive == 1 %} checked{% endif %}>
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-md btn-success">save</button>
                            <div class="pull-right">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                                    delete
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

        </div><!-- /.row -->
    </div>

</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-danger" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Caution!</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Do you really want to permanently delete this rule?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <form action="/rules/subjects/{{ subject.id }}/delete" method="post">
                    <button type="submit" class="btn btn-danger">Yes</button>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

