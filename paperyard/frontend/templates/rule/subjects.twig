{% extends 'layout.twig' %}

{% block content %}

<div class="container-fluid">

    <div class="animated fadeIn">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <form action="/rules/subjects/add" method="POST">
                        <div class="card-body">
                            <div class="row w-100">
                                <div class="col-md-2">
                                    <div class="pull-left w-100 text-center">
                                        <input type="text" class="form-control" name="foundWords" id="foundWords">
                                        <label for="foundWords"><strong>{% trans "Needles" %}</strong></label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="pull-left w-100 text-center">
                                        <input type="text" class="form-control" name="foundCompany" id="foundCompany">
                                        <label for="foundCompany"><strong>{% trans "Company" %}</strong></label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="pull-left w-100 text-center">
                                        <input type="text" class="form-control" name="fileSubject" id="fileSubject">
                                        <label for="fileSubject"><strong>{% trans "Subject" %}</strong></label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="pull-left w-100 text-center">
                                        <input type="number" class="form-control" name="subjectScore" id="subjectScore">
                                        <label for="score"><strong>{% trans "Score" %}</strong></label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="pull-left w-100 text-center">
                                        <input type="text" class="form-control" name="tags" id="tags">
                                        <label for="tags"><strong>{% trans "Tags" %}</strong></label>
                                    </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <label class="switch switch-default switch-info switch-xl">
                                        <input type="checkbox" class="switch-input" name="isActive" id="isActive" checked>
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                    <br>
                                    <strong>{% trans "Status" %}</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        {% if rules|length > 0 %}
                            <table class="table table-striped table-hover table-bordered searchable">
                                <thead class="thead-default">
                                <tr>
                                    <th>{% trans "Needles" %}</th>
                                    <th>{% trans "Company" %}</th>
                                    <th>{% trans "Subject" %}</th>
                                    <th>{% trans "Score" %}</th>
                                    <th>{% trans "Tags" %}</th>
                                    <th class="column-type-status">{% trans "Status" %}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for rule in rules %}
                                <tr class='clickable' data-url="/rules/subjects/{{ rule.id }}">
                                    <td class="align-middle">{{ rule.foundWords }}</td>
                                    <td class="align-middle">{{ rule.foundCompany }}</td>
                                    <td class="align-middle">{{ rule.fileSubject }}</td>
                                    <td class="align-middle">{{ rule.subjectScore }}</td>
                                    <td class="align-middle">{{ rule.tags }}</td>
                                    <td class="">
                                        <label class="switch switch-default switch-secondary">
                                            <input type="checkbox" class="switch-input"{% if rule.isActive == 1 %} checked{% endif %} disabled>
                                            <span class="switch-label"></span>
                                            <span class="switch-handle"></span>
                                        </label>
                                    </td>
                                    </tr>{% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <div class="text-center w-100 text-serif">
                                <em><h4>"{% trans "I love rules and I love following them, unless that rule is stupid." %}"</h4></em>
                                <sup>â€• Anna Kendrick, Scrappy Little Nobody</sup>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div><!-- /.row -->
    </div>

</div>

{% endblock %}