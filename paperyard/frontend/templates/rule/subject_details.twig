{% extends 'layout.twig' %}

{% block content %}

<div class="container-fluid">

    <div class="animated fadeIn">

        <div class="row">

            <div class="col-lg-12">

                <div class="card">
                    <form action="/rules/subjects/save" method="post">
                        <div class="card-header">
                            {% trans "Rule Details" %}
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="shortNameForFile"><strong>{% trans "Needles" %}</strong></label>
                                <input type="text" class="form-control" name="shortNameForFile" id="shortNameForFile" value="{{ rule.foundWords }}">
                            </div>
                            <div class="form-group">
                                <label for="foundCompany"><strong>{% trans "Company" %}</strong></label>
                                <input type="text" class="form-control" name="foundCompany" id="foundCompany" value="{{ rule.foundCompany }}">
                            </div>
                            <div class="form-group">
                                <label for="fileSubject"><strong>{% trans "Subject" %}</strong></label>
                                <input type="text" class="form-control" name="fileSubject" id="fileSubject" value="{{ rule.fileSubject }}">
                            </div>
                            <div class="form-group">
                                <label for="tags"><strong>{% trans "Tags" %}</strong></label>
                                <input type="text" class="form-control" name="tags" id="tags" value="{{ rule.tags }}">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="subjectScore"><strong>{% trans "Score" %}</strong></label>
                                        <input type="number" class="form-control" name="subjectScore" id="subjectScore" value="{{ rule.subjectScore }}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label for="activeInput"><strong>{% trans "Status" %}</strong></label><br>
                                    <label class="switch switch-xl switch-default switch-info">
                                        <input type="hidden" name="isActive" value="off">
                                        <input type="checkbox" class="switch-input" name="activeInput" id="activeInput"{% if rule.isActive == 1 %} checked{% endif %}>
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-md btn-success">{% trans "save" %}</button>
                            <div class="pull-right">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                                    {% trans "delete" %}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

        </div><!-- /.row -->
    </div>

</div>

{% include 'rule_delete_modal.twig' with {'type': 'subjects'} %}

{% endblock %}