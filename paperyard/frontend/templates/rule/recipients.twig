{% extends 'layout.twig' %}

{% block content %}

<div class="container-fluid">

    <div class="animated fadeIn">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <form action="/rules/recipients/add" method="POST">
                        <div class="card-body">
                            <div class="row full-width">
                                <div class="col-md-5">
                                    <div class="pull-left full-width text-center">
                                        <input type="text" class="form-control" name="recipientName" id="recipientName">
                                        <label for="recipientName"><strong>{% trans "Long Name" %}</strong></label>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="pull-left full-width text-center">
                                        <input type="text" class="form-control" name="shortNameForFile" id="shortNameForFile">
                                        <label for="shortNameForFile"><strong>{% trans "Name For File" %}</strong></label>
                                    </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <label class="switch switch-default switch-info switch-xl">
                                        <input type="checkbox" class="switch-input" name="isActive" id="isActive" checked>
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                    <br>
                                    <strong>{% trans "Status" %}</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> {% trans "add" %}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        {% if rules|length > 0 %}
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="thead-default">
                                <tr>
                                    <th>{% trans "Long Name" %}</th>
                                    <th>{% trans "Name For File" %}</th>
                                    <th>{% trans "Status" %}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for rule in rules %}
                                <tr class='clickable-row' data-url="/rules/recipients/{{ rule.id }}">
                                    <td class="align-middle">{{ rule.recipientName }}</td>
                                    <td class="align-middle">{{ rule.shortNameForFile }}</td>
                                    <td class="">
                                        <label class="switch switch-default switch-secondary">
                                            <input type="checkbox" class="switch-input"{% if rule.isActive == 1 %} checked{% endif %} disabled>
                                            <span class="switch-label"></span>
                                            <span class="switch-handle"></span>
                                        </label>
                                    </td>
                                    </tr>{% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <div class="text-center full-width text-serif">
                                <em><h4>"{% trans "I love rules and I love following them, unless that rule is stupid." %}"</h4></em>
                                <sup>â€• Anna Kendrick, Scrappy Little Nobody</sup>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div><!-- /.row -->
    </div>

</div>

{% endblock %}