{% extends 'layout.twig' %}

{% block content %}

<div class="container-fluid">

    <div class="animated fadeIn">

        <div class="row">

            <div class="col-lg-12">

                <div class="card">
                    <form action="/rules/archive/{{ archive.id }}/save" method="post">
                        <div class="card-header">
                            {% trans "Rule Details" %}
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="toFolderInput"><strong>{% trans "Target Folder" %}</strong></label>
                                <input type="text" class="form-control" name="toFolderInput" id="toFolderInput" value="{{ archive.toFolder }}">
                            </div>
                            <div class="form-group">
                                <label for="companyInput"><strong>{% trans "Company" %}</strong></label>
                                <input type="text" class="form-control" name="companyInput" id="companyInput" value="{{ archive.company }}">
                            </div>
                            <div class="form-group">
                                <label for="subjectInput"><strong>{% trans "Subject" %}</strong></label>
                                <input type="text" class="form-control" name="subjectInput" id="subjectInput" value="{{ archive.subject }}">
                            </div>
                            <div class="form-group">
                                <label for="recipientInput"><strong>{% trans "Recipient" %}</strong></label>
                                <input type="text" class="form-control" name="recipientInput" id="recipientInput" value="{{ archive.recipient }}">
                            </div>
                            <div class="form-group">
                                <label for="tagsInput"><strong>{% trans "Tags" %}</strong></label>
                                <input type="text" class="form-control" name="tagsInput" id="tagsInput" value="{{ archive.tags }}">
                            </div>
                            <div class="form-group">
                                <label for="activeInput"><strong>{% trans "Status" %}</strong></label><br>
                                <label class="switch switch-xl switch-default switch-info">
                                    <input type="checkbox" class="switch-input" name="activeInput" id="activeInput"{% if archive.isActive == 1 %} checked{% endif %}>
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-md btn-success">{% trans "save" %}</button>
                            <div class="pull-right">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                                    {% trans "delete" %}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

        </div><!-- /.row -->
    </div>

</div>

{% include 'rule_delete_modal.twig' %}

{% endblock %}