{% extends 'layout.twig' %}

{% block content %}

    <div class="container-fluid">

        <div class="animated fadeIn">

            <div class="row">
                {% for archive in archives|slice(0,8) %}
                        <div class="col-sm-3">
                            <a href="/docs/archive/{{ archive|replace({' ': '%20'}) }}">
                            <div class="card text-white bg-success">
                                <div class="card-body archive-card">
                                /{{ archive }}
                                </div>
                            </div>
                            </a>
                        </div>
                {%  endfor %}
            </div>

            <div class="row">
                {{ dump(newestFiles) }}
                {% for file in files|slice(0,4) %}
                <div class="col-md-3">
                    <div class="card text-white bg-info">
                        <div class="card-header">
                            <strong>{{ file.subject }}</strong><br>
                            <small>{{ file.company }}<br>{{ file.recipient }} - {{ file.date }}</small>
                        </div>
                        <div class="card-body archive-card">
                            <img class="pages-{{ file.pages|cap(4) }}" src="/thumbnail/{{ file.identifier }}">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>{% trans "Archive" %}</strong>
                        <div class="float-right">
                            <input type="text" class="searchable form-control" placeholder="{% trans "What you looking for?" %}">
                        </div>
                    </div>
                    <div class="card-body">
                        {% if files|length > 0 %}
                        <table class="table table-hover table-bordered table-striped searchable">
                            <thead class="thead-default">
                                <tr>
                                    <th>{% trans "Subject" %}</th>
                                    <th>{% trans "Company" %}</th>
                                    <th>{% trans "Date" %}</th>
                                    <th>{% trans "Tags" %}</th>
                                    <th>{% trans "Pages" %}</th>
                                    <th>{% trans "Size" %}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for file in files %}
                                <tr class='clickable-row'  data-url="/docs/{{ file.identifier }}">
                                    <td>{{ file.subject }}</td>
                                    <td>{{ file.company }}</td>
                                    <td class="searchable-ignore">{{ file.date }}</td>
                                    <td>{{ file.tags }}</td>
                                    <td class="searchable-ignore">{{ file.pages }}</td>
                                    <td class="searchable-ignore">{{ file.size }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <div class="text-center full-width text-serif">
                                <em>{% trans "no documents" %}</em>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <!--/.col-->
        </div><!--/.row-->
    </div>

{% endblock %}