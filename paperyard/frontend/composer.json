{
    "name": "Paperyard",
    "description": "Rule based renaming of files. Gets filenames of (scanned) PDFs into a standard format.",
    "keywords": ["ocr", "file", "naming"],
    "homepage": "https://github.com/tlwt/paperyard/",
    "license": "MIT",
    "authors": [
        {
            "name": "Till Witt",
            "email": "witt@consider-it.de"
        },
        {
            "name": "Jannik Kramer",
            "email": "kramer@consider-it.de"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "Paperyard\\Views\\": "controllers/views/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
